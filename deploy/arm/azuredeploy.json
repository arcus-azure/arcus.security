{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "KeyVault.Vault.Name": {
            "type": "string",
            "minLength": 3,
            "maxLength": 24,
            "defaultValue": "arcus-security-dev-we"
        },
        "KeyVault.Secret.Name": {
            "type": "string",
            "defaultValue": "ArcusTestSecret"
        },
        "AD.Tenant.Id": {
            "defaultValue": "",
            "type": "string"
        },
        "AD.ServicePrincipal.ObjectId": {
            "defaultValue": "",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.KeyVault/vaults",
            "name": "[parameters('KeyVault.Vault.Name')]",
            "apiVersion": "2016-10-01",
            "location": "westeurope",
            "properties": {
                "sku": {
                    "family": "A",
                    "name": "standard"
                },
                "tenantId": "[parameters('AD.Tenant.Id')]",
                "accessPolicies": [
                    {
                        "tenantId": "[parameters('AD.Tenant.Id')]",
                        "objectId": "[parameters('AD.ServicePrincipal.ObjectId')]",
                        "permissions": {
                            "keys": [],
                            "secrets": [
                                "get",
                                "list"
                            ],
                            "certificates": []
                        }
                    }
                ],
                "enabledForDeployment": false,
                "enabledForDiskEncryption": false,
                "enabledForTemplateDeployment": false
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.KeyVault/vaults/secrets",
            "name": "[concat(parameters('KeyVault.Vault.Name'), '/', parameters('KeyVault.Secret.Name'))]",
            "apiVersion": "2016-10-01",
            "location": "westeurope",
            "properties": {
                "value": "[guid(subscription().subscriptionId, resourceGroup().id, deployment().name)]",
                "attributes": {
                    "enabled": true
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.KeyVault/vaults', parameters('KeyVault.Vault.Name'))]"
            ]
        }
    ]
}